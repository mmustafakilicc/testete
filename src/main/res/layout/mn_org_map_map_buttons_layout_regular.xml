<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="@color/mn_org_map_bg_primary">

    <TextView
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_base"
        android:background="@drawable/mn_org_map_bg_et_search"
        android:drawablePadding="16dp"
        android:fontFamily="@font/mn_font_regular"
        android:lines="1"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:hint="@string/search_map"
        android:text="@string/search"
        android:textColor="#80141E33"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/mn_org_map_ic_search"
        app:drawableTint="@color/mn_org_map_bg_menu_night"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_buttons_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_base"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/nav_frame_padding"
        app:layout_constraintBottom_toBottomOf="@+id/map_buttons_inner_right"
        app:layout_constraintStart_toStartOf="parent">

        <include
            layout="@layout/mn_org_map_map_buttons_layers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_buttons_inner_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_base"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/nav_frame_padding"
        app:layout_constraintBottom_toTopOf="@id/layoutMapButtonsBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch">

        <include
            layout="@layout/mn_org_map_map_buttons_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_half"
            app:layout_constraintBottom_toTopOf="@+id/my_position"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layoutMapButtonsBottom"
        layout="@layout/mn_org_map_map_buttons_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>