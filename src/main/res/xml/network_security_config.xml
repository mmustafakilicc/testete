<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <base-config cleartextTrafficPermitted="true">
    <trust-anchors>
      <!-- Certificates are required for Android 7 and below. See the link for details:
           https://community.letsencrypt.org/t/letsencrypt-certificates-fails-on-android-phones-running-android-7-or-older/205686 -->
      <certificates src="@raw/mn_org_map_isrgrootx1" />
      <certificates src="@raw/mn_org_map_globalsignr4" />
      <certificates src="@raw/mn_org_map_gtsrootr1" />
      <certificates src="@raw/mn_org_map_gtsrootr2" />
      <certificates src="@raw/mn_org_map_gtsrootr3" />
      <certificates src="@raw/mn_org_map_gtsrootr4" />
      <certificates src="system" />
    </trust-anchors>
  </base-config>
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">omap.talkyrunner.com</domain>
  </domain-config>
</network-security-config>
